<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
   <p><%= link_to "プロフィール編集", user_path(user.id) %></p>
</div>

<!-- ユーザーの投稿一覧必要？ -->
<% @books.each do |book| %>
  <div>
    <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
    <p><%= image_tag book.user.get_profile_image(100,100) %></p>
   <p><%= image_tag 'no_image.jpg' %></p>
   <p><%= book.title %></p>
   <p><%= book.body %></p>
   <p><%= book.user.name %></p>
   <p></p>
  </div>
 <% end %>