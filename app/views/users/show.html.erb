 <%= render 'user', user: @user %>
 <%= render 'books/new', book: @book_new %>

 <% @books.each do |book| %>
  <div>
    <% if book.user.profile_image.attached? %>
     <p><%= image_tag book.user.get_profile_image(100,100) %></p>
    <% else %>
     <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
    <%= link_to book_path(book.id) do %>
     <%= book.title %>
    <% end %>
   <p><%= book.body %></p>
   <p><%= book.user.name %></p>
  </div>
<% end %>