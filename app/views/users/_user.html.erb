<div>
  <h1>User info</h1>
  <% if user.profile_image.attached? %>
   <%= image_tag user.profile_image(100,100) %>
  <% else %>
   <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
   <p>name <%= user.name %></p>
   <p>introduction <%= user.introduction	%></p>
   <p><%= link_to "プロフィール編集", edit_user_path(user.id) %></p>
</div>
