 <div class="container">
  <div class="row">
   <div class="col-md-3">
     <%= render 'users/user', user: @book.user %>
     <%= render 'new', book: @book_new %>
   </div>

 <div class="col-md-8 offset-md-1">
  <h1>Book detail</h1>
  <table class="table table-hover">
   <thead>
    <tr>
     <th>Title</th>
     <th>Opinion</th>
    </tr>
   </thead>
    <tbody>
     <tr>
      <td>
        <%= link_to user_path(@book.user.id) do %>
         <%= image_tag @book.user.get_profile_image(100,100) %>
        <% end %>
        </td>
         <td>
          <%= link_to book_path(@book) do %>
           <%= @book.title %>
          <% end %>
          </td>
          <td>
          <%= @book.body %>
          </td>
          <td>
            <%= link_to user_path(@book_user.id) do %>
             <%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
             <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %>
             <%= link_to "Destroy", book_path(@book), class:"btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
            <% end %>
        </td>
       </tr>
    </tbody>
   </table>
   </div>
 </div>
</div>