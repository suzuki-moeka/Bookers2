 <div class="container"> 
  <div class="row"> 
  <div class="col-lg-4" style="background-color: orange">
    <h2>User info</h2>
     <% if @user.profile_image.attached? %>
      <%= image_tag @user.profile_image(100,100) %>
     <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
   <p><%= @user.name %></p>
   <p><%= link_to "プロフィール編集", user_path(@user.id) %></p>
    <h2>New book</h2>
     <%= form_with model: @book  do |f| %>
    <h4>Title</h4>
     <%= f.text_field :title %>
    <h4>Opinion</h4>
     <%= f.text_area :body %>
     <%= f.submit 'Create Book' %>
    <% end %>
  </div>
   <div class="col-lg-8">

   <table class="table table-striped">    
    <% @books.each do |book| %>
    <div>
      <% if book.user.profile_image.attached? %>
     <p><%= image_tag book.user.profile_image(100,100) %></p>
      <% else %>
       <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
     <p><%= book.title %></p>
     <p><%= book.body %></p>
     <p><%= book.user.name %></p>
    </div>
    <% end %>
   </table>
  </div>
 </div>
</div>

