    <div class="col-lg-8">
   <table class="table table-striped">
    <% @books.each do |book| %>
    <div>
      <% if book.user.profile_image.attached? %>
       <p><%= image_tag book.user.profile_image(100,100) %></p>
      <% else %>
       <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
      <p><%= book.body %></p>
      <p><%= book.user.name %></p>
      <p><%= link_to "Edit", edit_book_path(book.id) %></p>
      <p><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？?" %></p>
     </div>
    <% end %>
   </table>
