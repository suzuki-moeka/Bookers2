<% @book.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
   <%= image_tag post_image.get_image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
  <p>Title：<%= post_image.shop_name %></p>
  <p>Opinion：<%= post_image.caption %></p>
</div>
<% end %>

<h1>新規投稿</h1>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>